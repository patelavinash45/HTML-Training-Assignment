@model Services.ViewModels.Admin.SendLink

<link href="~/css/admin/_requestPopUp.css" rel="stylesheet" />
<link href="~/css/international-telephone-input.css" rel="stylesheet" />
<script src="~/js/international-telephone-input.js"></script>
<script src="~/js/Admin/requestPopUp.js"></script>
<div class="modal" tabindex="-1" id="sendLink">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Send Mail And SMS to Patient For Link</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle-fill h3 modal-title"></i>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="SendLink" id="sendLinkForm">
                <div class="modal-body">
                    <div class="form-floating ">
                        <input asp-for="FirstName" class="form-control" id="firstName" placeholder="BusinessFirstName" />
                        <label for="firstName">First Name</label>
                        <span class="text-danger" id="firstNameValidation"></span>
                    </div>
                    <div class="form-floating ">
                        <input asp-for="LastName" class="form-control" id="lastName" placeholder="BusinessFirstName" />
                        <label for="lastName">Last Name</label>
                        <span class="text-danger" id="lastNameValidation"></span>
                    </div>
                    <input asp-for="Mobile" class="form-control" id="phoneSendlink" type="tel" placeholder="BusinessMobile" />
                    <span class="text-danger" id="phoneSendlinkValidation"></span>
                    <div class="form-floating ">
                        <input asp-for="Email" class="form-control" id="emailSendLink" placeholder="BusinessFirstName" />
                        <label for="emailSendLink">Email</label>
                        <span class="text-danger" id="emailSendlinkValidation"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn mx-2" id="conformButton">
                            Send
                        </button>
                        <button type="button" class="btn" data-bs-dismiss="modal" id="closeButton">
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    const phoneInputField = document.getElementById("phoneSendlink");
    window.intlTelInput(phoneInputField, {
        initialCountry: "in",
        separateDialCode: true,
        utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });
</script>