@model Services.ViewModels.Admin.AssignPopUp

<link href="~/css/admin/_requestPopUp.css" rel="stylesheet" />
<script src="~/js/Admin/requestPopUp.js"></script>
<div class="modal" tabindex="-1" id="assignRequest">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Assign Request</h5>
                <button type="button" class="border-0 bg-transparent" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle-fill h3 modal-title"></i>
                </button>
            </div>
            <form asp-controller="Admin" asp-action="AssignPopUp">
                <div class="modal-body">
                    To assign this request search and select another Physician.
                    <input readonly class="d-none patientRequestId" asp-for="RequestId" type="text" />
                    <select class="p-2 w-100 mb-2" asp-for="SelectedRegion" id="selectRegion" onchange="changeSelect()">
                        <option disabled selected value="">Regions</option>
                        @foreach (var item in Model.Regions)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                    <select class="p-2 w-100 mb-2 physician" asp-for="SelectedPhysician">
                        <option disabled selected value="">Physicians</option>
                        @foreach (var item in Model.Physicians)
                        {
                            <option value="@item.Key" class="physicianOptions region-@item.Value.Item1">@item.Value.Item2</option>
                        }
                    </select>
                    <textarea asp-for="AdminTransferNotes" class="w-100 p-2 border-2 mb-4 mt-3" placeholder="Additional Notes" rows="5"></textarea>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn mx-2" id="conformButton">
                            Conform
                        </button>
                        <button type="button" class="btn" data-bs-dismiss="modal" id="closeButton">
                            Close
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
