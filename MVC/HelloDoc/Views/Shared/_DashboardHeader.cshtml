@model Repositories.ViewModels.DashboardHeader

<script src="~/js/patient/dashboard.js"></script>
<link href="~/css/patient/_dashboardHeader.css" rel="stylesheet" />
<header>
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <button id="slidebar-button" onclick="sidebar()">
                <i class="bi bi-list"></i>
            </button>
            <img id="logo-image" src="~/images/helloDocLogo.png" />
        </div>
        <div class="d-flex align-items-center">
            <span id="welcome-text">
                Welcome @* <b>Tests tests </b>*@
                <b> @Model.FirstName </b>
                <b> @Model.LastName </b>
            </span>
            <a asp-controller="Patient" asp-action="LoginPage">
                <button id="log-out">
                    <span id="button-text">
                        Logout
                    </span>
                    <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                </button>
            </a>
            <button id="them-icon">
                <i class="bi-moon"> </i>
            </button>
        </div>
    </div>
    <hr/>
    <div id="header-buttom">
        <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="@Model.AspNetUserId">
            <button class="navbar-item border-0 bg-transparent" onclick="changeTab2(true)">
                Dashboard
                <hr id="dashboardHr" class="underLine"/>
            </button>
        </a>
        <a asp-controller="Patient" asp-action="ViewProfile" asp-route-id="@Model.AspNetUserId">
            <button class="navbar-item border-0 bg-transparent" onclick="changeTab2(false)">
                Profile
                <hr id="profileHr" class="underLine" />
            </button>
        </a>
    </div>
</header>
<div id="side-bar" >
    <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="@Model.AspNetUserId">
        <button class="sidebar-button navbar-item w-75" id="dashboard" onclick="changeTab(true)">
            Dashboard
        </button>
    </a>
    <a asp-controller="Patient" asp-action="ViewProfile" asp-route-id="@Model.AspNetUserId">
        <button class="sidebar-button navbar-item w-75" id="profile" onclick="changeTab(false)">
            Profile
        </button>
    </a>
</div>