<script src="~/js/patient/dashboard.js"></script>
<link href="~/css/patient/_dashboardHeader.css" rel="stylesheet" />
<header>
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <button id="slidebar-button" onclick="sidebar()">
                <i class="bi bi-list"></i>
            </button>
            <img id="logo-image" src="~/images/helloDocLogo.png" />
        </div>
        <div class="d-flex align-items-center">
            <span id="welcome-text">
                Welcome @* <b>Tests tests </b>*@
                @*<b> @Model[0].FirstName </b>
                <b> @Model[0].LastName </b>*@
            </span>
            <a asp-controller="Patient" asp-action="LoginPage">
                <button id="log-out">
                    <span id="button-text">
                        Logout
                    </span>
                    <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                </button>
            </a>
            <button id="them-icon">
                <i class="bi-moon"> </i>
            </button>
        </div>
    </div>
    <hr />
    <div id="header-buttom">
        <button class="btn navbar-item" onclick="changeTab(dashboard_content)">
            Dashboard
        </button>
        <button class="btn navbar-item" onclick="changeTab(profile_content)">
            Profile
        </button>
    </div>
</header>
<div id="side-bar">
    <button class="sidebar-button navbar-item" id="dashboard" onclick="changeTab(dashboard_content,true)">
        Dashboard
    </button>
    <button class="sidebar-button navbar-item" id="profile" onclick="changeTab(profile_content,false)">
        Profile
    </button>
</div>