@model int
@inject IHttpContextAccessor HttpContextAccessor

<link href="~/css/admin/_dashboardHeader.css" rel="stylesheet" />
<header>
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <button id="slidebar-button" class="bg-transparent " onclick="sidebar()">
                <i class="bi bi-list"></i>
            </button>
            <img id="logo-image" src="~/images/helloDocLogo.png" />
        </div>
        <div class="d-flex align-items-center">
            <span id="welcome-text">
                Welcome
                <b> @HttpContextAccessor.HttpContext.Session.GetString("firstName") </b>
                <b> @HttpContextAccessor.HttpContext.Session.GetString("lastName") </b>
            </span>
            <a asp-controller="Admin" asp-action="Logout">
                <button id="log-out" class="bg-transparent ">
                    <span id="button-text">
                        Logout
                    </span>
                    <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                </button>
            </a>
            <button id="them-icon" class="bg-transparent ">
                <i class="bi-moon"> </i>
            </button>
        </div>
    </div>
    <hr class="h5" />
    <div id="header-buttom" class="mx-2">
        <a asp-controller="Admin" asp-action="Dashboard" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Dashboard
            </div>
            @if (Model == 1)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Provider Location
            </div>
            @if (Model == 2)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                My Profile
            </div>
            @if (Model == 3)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Providers
            </div>
            @if (Model == 4)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Partners
            </div>
            @if (Model == 5)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Access
            </div>
            @if (Model == 6)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
        <a asp-controller="" asp-action="" asp-route-id="" class="mx-2">
            <div class="mx-2 h6">
                Records
            </div>
            @if (Model == 7)
            {
                <hr class="border-bottom border-3 border-dark h1" />
            }
        </a>
    </div>
</header>
