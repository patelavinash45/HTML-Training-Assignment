@model Repositories.ViewModels.DashboardHeader
@inject IHttpContextAccessor HttpContextAccessor

<link href="~/css/patient/_dashboardHeader.css" rel="stylesheet" />
<script src="~/js/patient/dashboard.js"></script>
<header>
    <div class="d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center">
            <button id="slidebar-button" onclick="sidebar()">
                <i class="bi bi-list"></i>
            </button>
            <img id="logo-image" src="~/images/helloDocLogo.png" />
        </div>
        <div class="d-flex align-items-center">
            <span id="welcome-text">
                Welcome @* <b>Tests tests </b>*@
                <b> @Model.FirstName </b>
                <b> @Model.LastName </b>
            </span>
            <a asp-controller="Patient" asp-action="LoginPage">
                <button id="log-out" onclick="">
                    <span id="button-text">
                        Logout
                    </span>
                    <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                </button>
            </a>
            <button id="them-icon">
                <i class="bi-moon"> </i>
            </button>
        </div>
    </div>
    <hr/>
    <div id="header-buttom" class="mx-2">
        <a asp-controller="Patient" asp-action="Dashboard" class="mx-2">
            <div class="mx-2 h6">
                Dashboard
            </div>
            @if(Model.PageType == 1)
            {
                <hr class="h1" />
            }
        </a>
        <a asp-controller="Patient" asp-action="ViewProfile" class="mx-2">
            <div class="mx-2 h6">
                Profile
            </div>
            @if (Model.PageType == 2)
            {
                <hr class="h1" />
            }
        </a>
    </div>
</header>
