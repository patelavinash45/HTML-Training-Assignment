@model Services.ViewModels.Admin.ViewNotes

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "ViewCase";
    ViewBag.JsFile = "/js/Admin/viewNotes.js";
    ViewBag.CssFile = "/css/Admin/ViewNotes.css";
    ViewBag.Header = "_AdminDashboardHeader";
}


    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
            <h3>
                Notes
            </h3>
            <a asp-controller="Admin" asp-action="Dashboard">
                <button id="back-box">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-arrow-left-right fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Transfer Notes
                        </h4>
                            @for (int i = 0; i < Model.TransferNotes.Count; i++)
                            {
                                <div class="d-flex">
                                    <i class="bi bi-@(i+1)-square h4 me-2"></i>
                                    @Model.TransferNotes[i]
                                </div>
                            }
                        </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-person-circle fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Physician Notes
                        </h4>
                        @Model.PhysicianNotes
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-file-person-fill fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Admin Notes
                        </h4>
                        @Model.AdminNotes
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form asp-controller="Admin" asp-action="ViewNotes" id="form">
                    <div class="card p-3 d-flex align-items-end">
                       <div class="form-floating w-100">
                            <textarea class="form-control border-2 mb-2 h-100" placeholder="Additional Notes" rows="5" asp-for="NewAdminNotes" id="newnotes">

                            </textarea>
                            <label for="newnotes">Additional Notes</label>
                            <span class="text-danger validation mb-2">this Additional Notes Field is required</span>
                       </div>
                        <button id="saveChanges" class="px-3" type="submit">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

