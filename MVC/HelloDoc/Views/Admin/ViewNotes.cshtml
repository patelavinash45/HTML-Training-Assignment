@model Repositories.ViewModels.Admin.ViewNotes

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ViewCase</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/ViewNotes.css" rel="stylesheet" />
</head>

<body>
    @await Component.InvokeAsync("Notyf")
    @Html.Partial("~/Views/Shared/_AdminDashboardHeader.cshtml", Model.Header)
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-3 mb-3">
            <h3>
                Notes
            </h3>
            <a asp-controller="Admin" asp-action="ViewCase" asp-route-requestId="@Model.RequestId">
                <button id="back-box">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-arrow-left-right fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Transfer Notes
                        </h4>
                        @for(int i=0;i<Model.TransferNotes.Count;i++)
                        {
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" fill="currentColor" class="bi bi-@(i+1)-square" viewBox="0 0 16 16">
                                <path d="M9.283 4.002V12H7.971V5.338h-.065L6.072 6.656V5.385l1.899-1.383z" />
                                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm15 0a1 1 0 0 0-1-1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1z" />
                            </svg>
                            @Model.TransferNotes[i]
                        }
                        @*@foreach(var item in Model.TransferNotes)
                        {
                            @item
                        }*@
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-person-circle fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Physician Notes
                        </h4>
                        @Model.PhysicianNotes
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                <div class="d-flex flex-row card p-3">
                    <i class="bi bi-file-person-fill fs-3 me-3"></i>
                    <div>
                        <h4 class="mt-1">
                            Admin Notes
                        </h4>
                        @Model.AdminNotes
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form asp-controller="Admin" asp-action="ViewNotes">
                    <div class="card p-3 d-flex align-items-end">
                        <input class="d-none" asp-for="RequestId" type="text"/>
                        <textarea class="form-control border-2 mb-4" placeholder="Additional Notes" rows="5" asp-for="NewAdminNotes" id="newnotes"></textarea>
                        <span asp-validation-for="NewAdminNotes" class="text-danger"></span>
                        <button id="saveChanges" class="px-3" type="submit">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
