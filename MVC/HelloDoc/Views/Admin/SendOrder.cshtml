@model Services.ViewModels.Admin.SendOrder

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Send Order</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/sendOrder.css" rel="stylesheet" />
    <script src="~/js/Admin/SendOrder.js"></script>
</head>
<body>
    @Html.Partial("~/Views/Shared/_AdminDashboardHeader.cshtml",0)
    <div class="container">
        <div class="d-flex justify-content-between align-content-center mt-3 mb-3">
            <span class="h3 mt-2">
                Send Order
            </span>
            <a asp-controller="Admin" asp-action="Dashboard">
                <button id="backBox">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <form class="w-100" id="form" asp-controller="Admin" asp-action="SendOrder">
            <input readonly class="d-none" asp-for="RequestId" />
            <div class="row">
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <select class="form-select" id="selectedProfession" asp-for="SelectedProfession" onchange="changeSelect()">
                        <option disabled selected value="">Select Profession</option>
                        @foreach(var item in Model.Professions)
                        {
                            <option value="@item.Key">@item.Value</option>
                        }
                    </select>
                    <label for="selectedProfession">Select Profession</label>
                    <span asp-validation-for="SelectedProfession" class="text-danger"></span>
                </div>
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <select class="form-select" id="selectedBusiness" asp-for="SelectedBusiness" onchange="changeBussiness()">
                        <option disabled selected value="">Select Bussiness</option>
                        @foreach (var item in Model.Businesses)
                        {
                            <option value="@item.Key" class="bussinessOptions item-@item.Value.Item1" >@item.Value.Item2</option>
                        }
                    </select>
                    <label for="selectedBusiness">Business</label>
                    <span asp-validation-for="SelectedBusiness" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <input class="form-control" id="contact" asp-for="Contact"/>
                    <label for="contact">Business Contact</label>
                    <span asp-validation-for="Contact" class="text-danger"></span>
                </div>
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <input class="form-control" id="email" asp-for="Email"/>
                    <label for="email">Business Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <input class="form-control" id="faxNumber" asp-for="FaxNumber"/>
                    <label for="faxNumber">Fax Number</label>
                    <span asp-validation-for="FaxNumber" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating">
                    <textarea class="form-control h-75" id="orderDetils" rows="3" asp-for="OrderDetails"></textarea>
                    <label for="orderDetils">Prescription or Order detils</label>
                    <span asp-validation-for="OrderDetails" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                    <select class="form-select" id="refill" asp-for="NoOfRefill">
                        <option disabled selected value="0">Not Required</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    <label for="refill">No Of Refill</label>
                    <span asp-validation-for="NoOfRefill" class="text-danger"></span>
                </div>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <button id="submitButton" class="me-3 px-3" type="submit">
                    Submit
                </button>
                <button type="button" class="px-3">
                    Cancle
                </button>
            </div>
        </form>
    </div>
</body>
</html>