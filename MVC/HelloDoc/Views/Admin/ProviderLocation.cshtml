<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Provider Location</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/admin//providerLocation.css" />
</head>
<body>
    <partial name="_AdminDashboardHeader" model="2">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
            <h3>
                Provider Location
            </h3>
            <a asp-controller="Admin" asp-action="Dashboard">
                <button class="bg-white px-3 fw-medium">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <div class="mapView">
            <div id="map"></div>
        </div>
    </div>
    <script>
        var map = L.map('map').setView([23.0225, 72.5714], 11);
        googleStreets = L.tileLayer('http://{s}.google.com/vt/lyrs=m&x={x}&y={y}&z={z}', {
            maxZoom: 20,
            subdomains: ['mt0', 'mt1', 'mt2', 'mt3']
        }).addTo(map);
        $.ajax({
            url: '/Admin/GetProviderLocation',
            method: 'GET',
            success: function (response) {
                response.map(function (res) {
                        L.marker([res.latitude, res.longitude]).addTo(map).bindPopup(res.providerName)
                })
            }
        })
    </script>
</body>
</html>