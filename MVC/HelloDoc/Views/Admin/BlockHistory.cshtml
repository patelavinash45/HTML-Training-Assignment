@model Services.ViewModels.Admin.BlockHistory

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Block History</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/records.css" rel="stylesheet" />
    <script src="~/js/Admin/record.js"></script>
</head>
<body>
    <partial name="_AdminDashboardHeader" model="7">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center mt-2 mb-2">
                <h3>
                    Block History
                </h3>
                <a asp-controller="Admin" asp-action="Dashboard">
                    <button class="bg-white px-3 fw-bold">
                        <i class="bi bi-chevron-left"> </i>
                        Back
                    </button>
                </a>
            </div>
            <div class="recordList">
                <form id="blockHistoryForm">
                    <div class="row">
                        <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <input asp-for="Name" class="form-control" id="firstname" placeholder="Name" />
                            <label for="firstname">First Name</label>
                        </div>
                        <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <input asp-for="Date" class="form-control" id="date" placeholder="Date" type="Date" />
                            <label for="lastName">Date</label>
                        </div>
                        <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <input asp-for="Email" class="form-control" id="email" placeholder="Email" />
                            <label for="email">Email</label>
                        </div>
                        <div class="form-floating col-xl-3 col-lg-4 col-md-6 col-sm-6">
                            <input asp-for="Phone" class="form-control" id="phone" placeholder="Number" />
                            <label for="phone">Phone Number</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end align-items-center mt-2 mb-2">
                        <button class="bg-white px-3 me-3 fw-bold resetBlockHistory" type="button">
                            Clear
                        </button>
                        <button class="px-3 cloredButton text-white fw-bold searchButtonBlockHistory" type="button">
                            Search
                        </button>
                    </div>
                </form>
                <div class="tableData">
                    <partial name="_BlockHistoryTable" model="@Model.BlockHistoryTable"></partial>
                </div>
            </div>
        </div>
</body>
</html>