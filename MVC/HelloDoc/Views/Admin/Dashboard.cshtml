@model Repositories.ViewModels.Admin.AdminDashboard

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Admin/dashboard.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/dashboard.css" rel="stylesheet" />
</head>

<body>
    <header>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button id="slidebar-button" class="bg-transparent " onclick="sidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <img id="logo-image" src="~/images/helloDocLogo.png" />
            </div>
            <div class="d-flex align-items-center">
                <span id="welcome-text">
                    Welcome @* <b>Tests tests </b>*@
                    <b> Test </b>
                    <b> test </b>
                </span>
                <a asp-controller="Patient" asp-action="LoginPage">
                    <button id="log-out" class="bg-transparent ">
                        <span id="button-text">
                            Logout
                        </span>
                        <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                    </button>
                </a>
                <button id="them-icon" class="bg-transparent ">
                    <i class="bi-moon"> </i>
                </button>
            </div>
        </div>
        <hr class="h5" />
        <div id="header-buttom">
            <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="">
                <button class="navbar-item border-0 bg-transparent">
                    Dashboard
                    <hr class="fw-bold text-primary" />
                </button>
            </a>
            <a asp-controller="Patient" asp-action="ViewProfile" asp-route-id="">
                <button class="navbar-item border-0 bg-transparent">
                    Profile
                </button>
            </a>
        </div>
    </header>
    <div id="side-bar">
        <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="">
            <button class="sidebar-button navbar-item w-75" id="dashboard" onclick="changeTab(true)">
                Dashboard
            </button>
        </a>
        <a asp-controller="Patient" asp-action="ViewProfile" asp-route-id="">
            <button class="sidebar-button navbar-item w-75" id="profile" onclick="changeTab(false)">
                Profile
            </button>
        </a>
    </div>
    <div id="mainbody">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="newOption" onclick="changeTable(1)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-patch-plus buttonLogo"></i>
                            NEW
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="pendingOption" onclick="changeTable(2)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-clock-history buttonLogo"></i>
                            PENDING
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="activeOption" onclick="changeTable(3)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-person-check buttonLogo"></i>
                            ACTIVE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="concludeOption" onclick="changeTable(4)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-check-circle buttonLogo"></i>
                            CONCLUDE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="tocloseOption" onclick="changeTable(5)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-x-circle buttonLogo"></i>
                            TO CLOSE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="unpaidOption" onclick="changeTable(6)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-currency-dollar buttonLogo"></i>
                            UNPAID
                        </span>
                        <b class="mb-3 mx-3 h3">
                            1453
                        </b>
                    </button>
                </div>
            </div>
            <div id="new" class="tables row">
                @Html.Partial("~/Views/Shared/_NewTable.cshtml",Model.NewRequests[0])
            </div>
            <div id="pending" class="tables">
                @Html.Partial("~/Views/Shared/_PendingTable.cshtml")
            </div>
            <div id="active" class="tables">
                @Html.Partial("~/Views/Shared/_ActiveTable.cshtml")
            </div>
            <div id="conclude" class="tables">
                @Html.Partial("~/Views/Shared/_ConcludeTable.cshtml")
            </div>
            <div id="close" class="tables">
                @Html.Partial("~/Views/Shared/_CloseTable.cshtml")
            </div>
            <div id="unpaid" class="tables">
                @Html.Partial("~/Views/Shared/_UnpaidTable.cshtml")
            </div>
        </div>
    </div>
</body>

</html>