@model Services.ViewModels.Admin.AdminDashboard

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Admin/dashboard.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/dashboard.css" rel="stylesheet" />
</head>

<body>
    @await Component.InvokeAsync("Notyf")
    @Html.Partial("~/Views/Shared/_AdminDashboardHeader.cshtml", 1)
    @Html.Partial("~/Views/Shared/_RequestCancelPopUp.cshtml",Model.CancelPopup)
    @Html.Partial("~/Views/Shared/_RequestAssignPopUp.cshtml",Model.AssignAndTransferPopup)
    @Html.Partial("~/Views/Shared/_RequestBlockPopUp.cshtml",Model.BlockPopup)
    @Html.Partial("~/Views/Shared/_RequestTransferPopUp.cshtml",Model.AssignAndTransferPopup)
    @Html.Partial("~/Views/Shared/_RequestClearPopUp.cshtml")
    @Html.Partial("~/Views/Shared/_SendAgreementPopUp.cshtml",Model.SendAgreement)
    <div class="cancelPopUp"></div>
    <div id="mainbody">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="newOption" onclick="changeTable(1)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-patch-plus buttonLogo"></i>
                            NEW
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.NewRequestCount
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="pendingOption" onclick="changeTable(2)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-clock-history buttonLogo"></i>
                            PENDING
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.PendingRequestCount
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="activeOption" onclick="changeTable(3)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-person-check buttonLogo"></i>
                            ACTIVE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.ActiveRequestCount
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="concludeOption" onclick="changeTable(4)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-check-circle buttonLogo"></i>
                            CONCLUDE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.ConcludeRequestCount
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="tocloseOption" onclick="changeTable(5)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-x-circle buttonLogo"></i>
                            TO CLOSE
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.TocloseRequestCount
                        </b>
                    </button>
                </div>
                <div class="col-xl-2 col-lg-4 col-md-4 col-sm-4 col-4">
                    <button class="d-flex flex-column optionButton w-100" id="unpaidOption" onclick="changeTable(6)">
                        <span class="mt-3 mb-1 mx-3 h5">
                            <i class="bi bi-currency-dollar buttonLogo"></i>
                            UNPAID
                        </span>
                        <b class="mb-3 mx-3 h3">
                            @Model.UnpaidRequestCount
                        </b>
                    </button>
                </div>
            </div>
            <div class="d-flex justify-content-between mt-4 align-items-center">
                <div id="headingText" class="h3 d-flex">
                    Patients
                    <span id="newText" class="tables">
                        (New)
                    </span>
                    <span id="pendingText" class="tables">
                        (Pending)
                    </span>
                    <span id="activeText" class="tables">
                        (Active)
                    </span>
                    <span id="concludeText" class="tables">
                        (Conclude)
                    </span>
                    <span id="closeText" class="tables">
                        (ToClose)
                    </span>
                    <span id="unpaidText" class="tables">
                        (UnPiad)
                    </span>
                </div>
                <div class="d-flex">
                    <button class="mx-1 middleOptionButtons">
                        <i class="bi bi-link-45deg"></i>
                        <span class="buttonText">
                            Send Link
                        </span>
                    </button>
                    <button class="mx-1 middleOptionButtons">
                        <i class="bi bi-file-plus"></i>
                        <span class="buttonText">
                            Create Requests
                        </span>
                    </button>
                    <button class="mx-1 middleOptionButtons">
                        <i class="bi bi-folder-symlink"></i>
                        <span class="buttonText">
                            Export
                        </span>
                    </button>
                    <button class="mx-1 middleOptionButtons">
                        <i class="bi bi-folder-symlink-fill"></i>
                        <span class="buttonText">
                            Export All
                        </span>
                    </button>
                    <button class="mx-1 middleOptionButtons">
                        <i class="bi bi-person"></i>
                        <span class="buttonText">
                            Request DTY Support
                        </span>
                    </button>
                </div>
            </div>
            <div>
                <div class="p-3 bg-white rounded-top-3 row">
                    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
                        <input placeholder="Search Patient" class="p-2 searchPatient" oninput="patientSearch(1)" type="search">
                        <select aria-placeholder="Region" class="p-2 searchRegion" onchange="regionSearch(this)">
                            <option value="">All Region</option>
                            @foreach(var item in Model.Regions)
                            {
                                <option value="@item.Key">@item.Value</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex justify-content-end col-xl-6 col-lg-6 col-md-12 col-sm-12 align-items-md-center">
                        <button class="px-3 bg-transparent" id="allButton" onclick="filterOnButton(0)">
                            All
                        </button>
                        <button class="d-flex align-items-center colorOption border-0 bg-transparent" onclick="filterOnButton(1)">
                            <i class="bi bi-circle-fill text-success mx-1"></i>
                            <div class="colorText">
                                Patient
                                <hr class="border-bottom border-3 border-dark h1 buttonHr" id="hr-1"/>
                            </div>
                        </button>
                        <button class="d-flex align-items-center colorOption border-0 bg-transparent" onclick="filterOnButton(2)">
                            <i class="bi bi-circle-fill text-warning mx-1"></i>
                            <div class="colorText">
                                Family/Friend
                                <hr class="border-bottom border-3 border-dark h1 buttonHr" id="hr-2" />
                            </div>
                        </button>
                        <button class="d-flex align-items-center colorOption border-0 bg-transparent" onclick="filterOnButton(3)">
                            <i class="bi bi-circle-fill text-danger mx-1"></i>
                            <div class="colorText">
                                Business
                                <hr class="border-bottom border-3 border-dark h1 buttonHr" id="hr-3" />
                            </div>
                        </button>
                        <button class="d-flex align-items-center colorOption border-0 bg-transparent" onclick="filterOnButton(4)">
                            <i class="bi bi-circle-fill text-primary mx-1"></i>
                            <div class="colorText">
                                Concierge
                                <hr class="border-bottom border-3 border-dark h1 buttonHr" id="hr-4" />
                            </div>
                        </button>
                        <button class="d-flex align-items-center colorOption border-0 bg-transparent" onclick="filterOnButton(5)">
                            <i class="bi bi-circle-fill text-info mx-1"></i>
                            <div class="colorText">
                                VIP
                                <hr class="border-bottom border-3 border-dark h1 buttonHr" id="hr-5" />
                            </div>
                        </button>
                    </div>
                </div>
            </div>
            <div id="new" class="tables">
                @Html.Partial("~/Views/Shared/_NewTable.cshtml",Model.NewRequests)
            </div>
            <div id="pending" class="tables">
                @Html.Partial("~/Views/Shared/_PendingTable.cshtml",Model.PendingRequests)
            </div>
            <div id="active" class="tables">
                @Html.Partial("~/Views/Shared/_ActiveTable.cshtml",Model.ActiveRequests)
            </div>
            <div id="conclude" class="tables">
                @Html.Partial("~/Views/Shared/_ConcludeTable.cshtml",Model.ConcludeRequests)
            </div>
            <div id="close" class="tables">
                @Html.Partial("~/Views/Shared/_CloseTable.cshtml",Model.TocloseRequests)
            </div>
            <div id="unpaid" class="tables">
                @Html.Partial("~/Views/Shared/_UnpaidTable.cshtml",Model.UnpaidRequests)
            </div>
        </div>
    </div>
</body>

</html>