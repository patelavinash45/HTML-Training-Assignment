@model Services.ViewModels.Admin.ProviderScheduling

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scheduling</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/providerScheduling.css" rel="stylesheet" />
    <script src="~/js/Admin/providerScheduling.js"></script>
</head>
<body>
    <partial name="_AdminDashboardHeader" model="0">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
            <h3>
                Scheduling
            </h3>
            <a asp-controller="Admin" asp-action="Dashboard">
                <button class="bg-white px-3 fw-bold py-2">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
            <select class="form-select select" id="regionsList">
                <option selected>All Region</option>
                @foreach(var item in Model.Regions)
                    {
                        <option value="@item.Key">@item.Value</option>
                    }
                </select>
            <div>
                <button class="fw-bold coloredButtons py-2 px-2">
                    Providers On Call
                </button>
                <button class="coloredButtons fw-bold py-2 px-2">
                    Shifts For Review
                </button>
                <button class="coloredButtons fw-bold py-2 px-2">
                    Add New Shift
                </button>
            </div>
        </div>
        <div class="h5">
            <span id="display">

            </span>
            <span id="displayWeek">

            </span>
        </div>
        <div class="d-flex justify-content-end align-items-center mt-2 mb-3">
            <div>
                <i class="bi bi-circle-fill mx-1 text-pink"></i>
                Pending Shift
            </div>
            <div>
                <i class="bi bi-circle-fill text-success mx-1"></i>
                Apporved Shift
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-2 mb-3">
            <div>
                <button class="border-0 bg-transparent" id="previous">
                    <i class="bi bi-caret-left-square fs-2"></i>
                </button>
                <i class="bi bi-calendar3 fs-4 mx-2"></i>
                <button class="border-0 bg-transparent" id="next">
                    <i class="bi bi-caret-right-square fs-2"></i>
                </button>
            </div>
            <div>
                <button class="active px-3 fw-bold tabButtons py-2" id="dayButton" onclick="chnagetab(1)">
                    Day
                </button>
                <button class="px-3 fw-bold tabButtons py-2" id="weekButton" onclick="chnagetab(2)">
                    Week
                </button>
                <button class="px-3 fw-bold tabButtons py-2" id="monthButton" onclick="chnagetab(3)">
                    Month
                </button>
            </div>
        </div>
        <div class="tab">
            <partial name="_DayWiseScheduling" model="@Model.TableData">
        </div>
    </div>
</body>
</html>