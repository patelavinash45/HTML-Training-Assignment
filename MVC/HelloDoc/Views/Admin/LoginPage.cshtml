@model Services.ViewModels.Login

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Page</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin/loginPage.css" rel="stylesheet" />
    <script src="~/js/Admin/loginPage.js"></script>
</head>

<body>
    @await Component.InvokeAsync("Notyf")
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-6 col-md-6 col-lg-6 vh-100 left-side">
                <img class="w-100 h-100" src="~/images/loginImage.jpg" />
            </div>
            <form asp-controller="Admin" asp-action="LoginPage" class="col-xl-6 col-md-6 col-lg-6 col-12 d-flex flex-column justify-content-center align-items-center vh-100">
                <span class="d-flex justify-content-end" id="back-button">
                    <a class="mt-4 mb-5 backto-patientsite" asp-controller="Patient" asp-action="PatientSite">
                        <i class="bi bi-chevron-left bi-xl"></i>
                        Back
                    </a>
                </span>
                <img class="w-25" src="~/images/helloDocLogo.png" />
                <span class="mt-4 mb-2 fw-bold fs-4">
                    Login To Your Account
                </span>
                <div class="form-floating w-50 mt-2">
                    <input asp-for="Email" class="form-control" id="email" type="text" placeholder="Email"/>
                    <label for="email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <i class="bi bi-envelope input-icon"></i>
                </div>
                <div class="form-floating w-50 mt-3 mb-1">
                    <input asp-for="PasswordHash" class="form-control" id="password" type="password" placeholder="Password" />
                    <label for="password">Password</label>
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    <button class="input-icon bg-transparent border-0" type="button" onclick="changeIcon()">
                        <i class="bi bi-eye" id="show-password"></i>
                        <i class="bi bi-eye-slash" id="hide-password"></i>
                    </button>
                </div>
                <button type="submit" class="button w-50 mt-4 fs-4">
                    Log In
                </button>
                <a class="mt-3 text-primary" asp-controller="Patient" asp-action="ResetPassword"> Forgot Password? </a>
                <div class="bottom">
                    <a class="mx-2"> Terms of Conditions </a>
                    |
                    <a class="mx-2"> Privacy Policy </a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>