<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/viewDocument.css" rel="stylesheet" />
</head>
<body>
    @{
        @Html.Partial("~/Views/Shared/_PatientDashboardHeader.cshtml",0)
    }
    @await Component.InvokeAsync("Notyf")
    <div class="container tab-content" id="dashboard_content">
        <div class="d-flex flex-column align-items-center w-100 row">
            <div class="d-flex justify-content-between align-content-center mt-3 mb-3">
                <span class="h3">
                    Documents
                </span>
                <a asp-controller="Patient" asp-action="Dashboard">
                    <button id="backBox">
                        <i class="bi bi-chevron-left"> </i>
                        Back
                    </button>
                </a>
            </div>
            <div class="main-body">
                <div class="w-100">
                    Patient Name
                </div>
                <div class="h3 w-100">
                    @Model.FirstName @Model.LastName
                </div>
                <div class="w-100">
                    Check here for any files that you or the doctors of your
                    subsequents have attached for you to review.
                </div>
                <form asp-controller="Patient" asp-action="ViewDocument" enctype="multipart/form-data">
                    <div class="input-group w-100 mb-4 mt-4">
                        <input class="form-control" placeholder="Select File" type="file" id="file-picker" asp-for="File">
                        <span asp-validation-for="File" class="text-danger"></span>
                        <button class="fs-5 button" id="uploadButton" type="submit">
                            <i class="bi bi-cloud-arrow-up-fill "></i>
                            Upload
                        </button>
                    </div>
                </form>
                <div class="d-flex justify-content-between align-content-center mt-3 mb-3">
                    <span class="h3 w-100">
                        Documents
                    </span>
                    <button id="downloadAll">
                        <span id="downloadText">
                            Download All
                        </span>
                        <i class="bi bi-cloud-arrow-down" id="downloadIcon"></i>
                    </button>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th class="col-5">
                                    <input type="checkbox" id="mainCheckBox">
                                </th>
                                <th class="col-3">
                                    Uploader
                                </th>
                                <th class="col-3">
                                    Upload Date
                                </th>
                                <th class="col-1">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.FileList)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="checkBox" id="@item.RequestWiseFileId" onchange="onCheckboxChnage(this,@Model.FileList.Count)">
                                        <i class="bi bi-file-earmark-pdf-fill mx-2"></i>
                                        @item.FileName
                                    </td>
                                    <td>
                                        @item.Uploder
                                    </td>
                                    <td>
                                        @item.CreatedDate.ToString("MMM dd, yyyy")
                                    </td>
                                    <td>
                                        <a href="~/Files/@item.RequestId/@item.FileName" download="@item.FileName" class="download @item.RequestWiseFileId">
                                            <button id="downloadButton" class="px-3">
                                                <i class="bi bi-cloud-arrow-down"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="accordion w-100"
                     id="accordionFlushExample">
                    @foreach (var item in Model.FileList)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                                          data-bs-target="#collapse-@item.RequestWiseFileId" aria-controls="panelsStayOpen-collapseOne">
                                    <input type="checkbox" id="@item.RequestWiseFileId" onchange="onCheckboxChnage(this,@Model.FileList.Count)">
                                    <i class="bi bi-file-earmark-pdf-fill mx-2"></i>
                                    @item.FileName
                                </button>
                            </h2>
                            <div id="collapse-@item.RequestWiseFileId" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                                <div class="accordion-body">
                                    <div class="col-10">
                                        <div>
                                            @item.Uploder
                                        </div>
                                        <div>
                                            @item.CreatedDate.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                    <a href="~/Files/@item.RequestId/@item.FileName" download="@item.FileName" class="download @item.RequestWiseFileId">
                                        <button id="downloadButton" class="px-3">
                                            <i class="bi bi-cloud-arrow-down"></i>
                                        </button>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content" id="profile_content">
        Profile content
    </div>
</body>
<script src="~/js/viewDocument.js"></script>
</html>