@model Repositories.ViewModels.SetNewPassword

<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        ReSet Password
    </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/patient/loginPage.css" rel="stylesheet" />
    <script src="~/js/Patient/LoginPage.js"></script>
</head>
<body>
    <div id="them-icon" class="z-2">
        <i class="bi-moon"> </i>
    </div>
    @{
        if(!Model.IsValidLink)
        {
            <script type="text/javascript">
                alert("Link is Close");
            </script>
        }
    }
    <div class="d-flex flex-column justify-content-between align-items-center vh-100">
        <img id="bg-image" src="~/images/LoginImage-removeBG.png" />
        <div class="d-flex flex-column align-items-center" id="form-box">
            <img id="logo-image" class="mb-5" src="~/images/helloDocLogo.png" />
            <p class="mt-5 mb-3" id="heading-text">Reset Password</p>
            <form class="w-100" asp-controller="Patient" asp-action="NewPassword">
                <div class="form-floating">
                    @if (Model.IsValidLink)
                    {
                        <input asp-for="Password" class="form-control" id="password" type="password" />
                    }
                    else
                    {
                        <input asp-for="Password" class="form-control" id="password" type="password" disabled />
                    }
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <label for="email">Password</label>
                    <button type="button" class="input-icon bg-transparent border-0" onclick="changeIcon()">
                        <i class="bi bi-eye" id="show-password"></i>
                        <i class="bi bi-eye-slash" id="hide-password"></i>
                    </button>
                </div>
                <input readonly asp-for="AspNetUserId" class="form-control d-none" id="conformpassword" />
                <div class="form-floating">
                    @if (Model.IsValidLink)
                    {
                        <input asp-for="ConformPassword" class="form-control" id="conformpassword" type="password"/>
                    }
                    else
                    { 
                        <input asp-for="ConformPassword" class="form-control" id="conformpassword" type="password" disabled/>
                    }
                    <span asp-validation-for="ConformPassword" class="text-danger"></span>
                    <label for="password">Conform Password</label>
                    <button type="button" class="input-icon bg-transparent border-0" onclick="changeIcon2()">
                        <i class="bi bi-eye" id="show-conformpassword"></i>
                        <i class="bi bi-eye-slash" id="hide-conformpassword"></i>
                    </button>
                </div>
                <a class="w-100" asp-controller="Patient" asp-action="Dashboard">
                    @if (Model.IsValidLink)
                    {
                        <button type="submit" class="button">Chnage Password</button>
                    }
                    else
                    {
                        <button type="submit" class="button" disabled>Chnage Password</button>
                    }
                </a>
            </form>
            <a class="mt-4 mb-5 backto-patientsite" asp-controller="Patient" asp-action="ResetPassword">
                Forgot password?
            </a>
        </div>
        <div class="mb-4">
            <a class="mx-2 conditions-text"> Terms of Conditions </a>
            |
            <a class="mx-2 conditions-text"> Privacy Policy </a>
        </div>
    </div>
</body>
</html>
