@model Repositories.ViewModels.Login

<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Login Page
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/patient/loginPage.css" rel="stylesheet" />
    <script src="~/js/Patient/LoginPage.js"></script>
</head>
<body>
    @await Component.InvokeAsync("Notyf")
    <div id="them-icon" class="z-2">
        <i class="bi-moon"> </i>
    </div>
    <div class="d-flex flex-column justify-content-between align-items-center vh-100">
        <img id="bg-image" src="~/images/LoginImage-removeBG.png" />
        <div class="d-flex flex-column align-items-center" id="form-box">
            <img id="logo-image" class="mb-5" src="~/images/helloDocLogo.png" />
            <span class="d-flex" id="back-button">
                <a class="mt-4 mb-5 backto-patientsite" asp-controller="Patient" asp-action="PatientSite">
                    <i class="bi bi-chevron-left bi-xl"></i>
                    Back
                </a>
            </span>
            <p class="mt-2 mb-3 w-100" id="heading-text">Login To Your Account</p>
            <form class="w-100" asp-controller="Patient" asp-action="LoginPage">
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <label for="email">Email</label>
                    <i class="bi bi-envelope input-icon"></i>
                </div>
                <div class="form-floating">
                    <input asp-for="PasswordHash" class="form-control" id="password" type="password" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    <label for="password">Password</label>
                    <button type="button" class="input-icon bg-transparent border-0" onclick="changeIcon()">
                        <i class="bi bi-eye" id="show-password"></i>
                        <i class="bi bi-eye-slash" id="hide-password"></i>
                    </button>
                </div>
                <button type="submit" class="button">Log In</button>
            </form>
            <a class="mt-4 mb-5 backto-patientsite" asp-controller="Patient" asp-action="ResetPassword">
                Forgot password?
            </a>
        </div>
        <div class="mb-4">
            <a class="mx-2 conditions-text"> Terms of Conditions </a>
            |
            <a class="mx-2 conditions-text"> Privacy Policy </a>
        </div>
    </div>
</body>
</html>
