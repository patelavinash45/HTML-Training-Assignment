@model Services.ViewModels.Login

<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Login Page
    </title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/patient/loginPage.css" rel="stylesheet" />
    <script src="~/js/LoginPage.js"></script>
</head>
<body>
    @await Component.InvokeAsync("Notyf")
    <div id="them-icon" class="z-2">
        <i class="bi-moon"> </i>
    </div>
    <div class="d-flex flex-column justify-content-between align-items-center vh-100">
        <img id="bg-image" src="~/images/LoginImage-removeBG.png" />
        <div class="d-flex flex-column align-items-center" id="form-box">
            <img id="logo-image" class="mb-5" src="~/images/helloDocLogo.png" />
            <span class="d-flex" id="back-button">
                <a class="mt-4 mb-5 backto-patientsite" asp-controller="Patient" asp-action="PatientSite">
                    <i class="bi bi-chevron-left bi-xl"></i>
                    Back
                </a>
            </span>
            <p class="mt-2 mb-3 w-100" id="heading-text">Login To Your Account</p>
            <form class="w-100" asp-controller="Patient" asp-action="LoginPage">
                <div class="input-group w-100 mt-2">
                    <div class="form-floating flex-grow-1">
                        <input asp-for="Email" class="form-control" id="email" type="email" placeholder="Email" />
                        <label for="email">Email</label>
                    </div>
                    <i class="bi bi-envelope input-group-text bg-transparent"></i>
                </div>
                <span asp-validation-for="Email" class="text-danger w-100"></span>
                <div class="input-group w-100 mt-3">
                    <div class="form-floating flex-grow-1">
                        <input asp-for="PasswordHash" class="form-control" id="password" type="password" placeholder="Password" />
                        <label for="password">Password</label>
                    </div>
                    <i class="bi bi-eye input-group-text bg-transparent" id="passwordIcon"></i>
                </div>
                <span asp-validation-for="PasswordHash" class="text-danger w-100"></span>
                <button type="submit" class="button mt-3">Log In</button>
            </form>
            <a class="mt-5 mb-5 backto-patientsite" asp-controller="Patient" asp-action="ResetPassword">
                Forgot password?
            </a>
        </div>
        <div class="mb-4">
            <a class="mx-2 conditions-text"> Terms of Conditions </a>
            |
            <a class="mx-2 conditions-text"> Privacy Policy </a>
        </div>
    </div>
</body>
</html>
