@model HelloDoc.ViewModels.AddFamilyRequest

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Family/Friend Request</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/patient/familyFriendRequest.css" rel="stylesheet" />
    <link href="~/css/international-telephone-input.css" rel="stylesheet" />
    <script src="~/js/international-telephone-input.js"></script>
    <script src="~/js/Patient/Request.js"></script>
</head>
<body>
    <partial name="_RequestHeader" />
    <div class="alert vw-100 vh-100" id="alert-message">
        <div id="alert-box">
            <img class="w-25" src="~/images/informtion-icon.png" />
            <h4>
                Information
            </h4>
            <span>
                When submitting a request, you must provide correct
            </span>
            <span>
                contact information for the patient or responsibly
            </span>
            <span>
                party. Failure to provide the correct email phone
            </span>
            <span> number will delay service or be declined.</span>
            <button class="btn" onclick="alert_close(this)">
                ok
            </button>
        </div>
    </div>
    <div id="main-body">
        <div class="d-flex justify-content-end container">
            <a id="back-box" asp-controller="Patient" asp-action="SubmitRequest">
                <i class="bi bi-chevron-left"> </i>
                Back
            </a>
        </div>
        <form asp-controller="Patient" asp-action="FamilyFriendRequest" enctype="multipart/form-data">
            <div class="container" id="form">
                <h5 class="fw-semibold">
                    Family/Friend Information
                </h5>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="FamilyFriendFirstName" class="form-control" id="first-name" placeholder />
                        <label for="first-name">Your First Name</label>
                        <span asp-validation-for="FamilyFriendFirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="FamilyFriendLastName" class="form-control" id="last-name" placeholder />
                        <label for="last-name">Your Last Name</label>
                        <span asp-validation-for="FamilyFriendLastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="FamilyFriendMobile" class="form-control" id="phone1" placeholder type="tel" />
                        <span asp-validation-for="FamilyFriendMobile" class="text-danger"></span>
                        <!-- <label for="phone">Phone Number</label> -->
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="FamilyFriendEmail" class="form-control" id="f-email" placeholder />
                        <label for="f-email">Email</label>
                        <span asp-validation-for="FamilyFriendEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="Relation" class="form-control" id="relation" placeholder />
                        <label for="relation">Reltion With Patient</label>
                        <span asp-validation-for="Relation" class="text-danger"></span>
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    Patient Information
                </h5>
                <textarea class="form-control" asp-for="Symptoms" placeholder="Enter Brief Details Of Symptoms(Optional)" rows="3"></textarea>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="FirstName" class="form-control" id="first-name" placeholder />
                        <label for="first-name">First Name</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="LastName" class="form-control" id="last-name" placeholder />
                        <label for="last-name">Last Name</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="BirthDate" class="form-control" id="date" placeholder="First Name" type="date" />
                        <label id="date-picker" for="date">Date of Birth</label>
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    Patient Contact Information
                </h5>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="Email" class="form-control" id="email" placeholder type="email" onfocusout="checkEmail(this)" />
                        <label for="email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="Mobile" class="form-control" id="phone2" placeholder type="tel" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                        <!-- <label for="phone">Phone Number</label> -->
                    </div>
                </div>
                <div class="row" id="input-password">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="Password" class="form-control" id="password" type="password" />
                        <label for="password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="ConformPassword" class="form-control" id="conform" type="password" />
                        <label for="conform">Conform Password</label>
                        <span asp-validation-for="ConformPassword" class="text-danger"></span>
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    Patient Location
                </h5>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="Street" class="form-control" id="street" placeholder />
                        <label for="street">Street</label>
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="City" class="form-control" id="city" placeholder />
                        <label for="city">City</label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="State" class="form-control" id="state" placeholder />
                        <label for="state">State</label>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="ZipCode" class="form-control" id="zip-code" placeholder />
                        <label for="zip-code">Zip-Code</label>
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-col-xl-6 col-md-6 col-lg-6">
                        <input asp-for="House" class="form-control" id="house" placeholder />
                        <label for="house">house(Optional)</label>
                        <span asp-validation-for="House" class="text-danger"></span>
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    (Optional)Upload Photo or Document
                </h5>
                <div class="input-group">
                    <input class="form-control" placeholder="Select File" type="file" id="file-picker" asp-for="File" />
                    <button class="button fs-5" type="button">
                        <i class="bi bi-cloud-arrow-up-fill"></i>
                        Upload
                    </button>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="bottom-button" id="submit-button">
                        Submit
                    </button>
                    <button class="bottom-button" id="cancel-button">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
    <partial name="_RequestFooter" />
    <script>
        const phoneInputField = document.getElementById("phone1");
        window.intlTelInput(phoneInputField, {
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });

        const phoneInputField2 = document.getElementById("phone2");
        window.intlTelInput(phoneInputField2, {
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
</body>
</html>
