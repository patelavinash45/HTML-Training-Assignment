<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Dashboard
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/patient/dashboard.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/patient/dashboard.js"></script>
</head>
<body>
    <header>
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <button id="slidebar-button" onclick="sidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <img id="logo-image" src="~/images/helloDocLogo.png" />
            </div>
            <div class="d-flex align-items-center">
                <span id="welcome-text"> Welcome <b>Tests tests </b> </span>
                <a asp-controller="Patient" asp-action="LoginPage">
                    <button id="log-out">
                        <span id="button-text">
                            Logout
                        </span>
                        <i id="button-icon" class="bi bi-box-arrow-right"> </i>
                    </button>
                </a>
                <button id="them-icon">
                    <i class="bi-moon"> </i>
                </button>
            </div>
        </div>
        <hr />
        <div id="header-buttom">
            <button class="btn navbar-item" onclick="changeTab(dashboard_content)">
                Dashboard
            </button>
            <button class="btn navbar-item" onclick="changeTab(profile_content)">
                Profile
            </button>
        </div>
    </header>
    <div id="side-bar">
        <button class="sidebar-button navbar-item" id="dashboard" onclick="changeTab(dashboard_content,true)">
            Dashboard
        </button>
        <button class="sidebar-button navbar-item" id="profile" onclick="changeTab(profile_content,false)">
            Profile
        </button>
    </div>
    <div class="tab-content" id="dashboard_content">
        <span class="h3">
            Medical History
        </span>
        <div class="d-flex flex-column align-items-end" id="history">
            <button id="new-request">
                <span id="button-text">
                    Create New Request
                </span>
                <i id="button-icon" class="bi bi-plus"> </i>
            </button>
            <!-- table -->
            <div class="table-responsive w-100">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th class="col-2">
                                Created Date
                            </th>
                            <th class="col-2">
                                Current Status
                            </th>
                            <th class="col-8">
                                Document
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Sep 27,2023
                            </td>
                            <td>
                                Accepted
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                Sep 27,2023
                            </td>
                            <td>
                                Accepted
                            </td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                Sep 27,2023
                            </td>
                            <td>
                                Accepted
                            </td>
                            <td>
                                <button id="document">
                                    (1) Document
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Sep 27,2023
                            </td>
                            <td>
                                Accepted
                            </td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- table(mobile-view) -->
            <div class="accordion accordion-flush w-100" id="accordionFlushExample">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingOne">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                            <i class="bi bi-clock me-2"></i>
                            <b class="me-2">Created Date: </b> Dec 5,2023
                        </button>
                    </h2>
                    <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <div>
                                <i class="bi bi-person-circle me-2"></i>
                                <b class="me-2">Provider: -</b>
                            </div>
                            <div>
                                <i class="bi bi-check-circle me-2"></i>
                                <b class="me-2">Current Status </b> Cancelled By Admin
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
                            <i class="bi bi-clock me-2"></i>
                            <b class="me-2">Created Date: </b> Dec 5,2023
                        </button>
                    </h2>
                    <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <div>
                                <i class="bi bi-person-circle me-2"></i>
                                <b class="me-2">Provider: -</b>
                            </div>
                            <div>
                                <i class="bi bi-check-circle me-2"></i>
                                <b class="me-2">Current Status </b>
                                <button id="document">
                                    (1) Document
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
                            <i class="bi bi-clock me-2"></i>
                            <b class="me-2">Created Date: </b> Dec 5,2023
                        </button>
                    </h2>
                    <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="flush-headingThree" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body">
                            <div>
                                <i class="bi bi-person-circle me-2"></i>
                                <b class="me-2">Provider: -</b>
                            </div>
                            <div>
                                <i class="bi bi-check-circle me-2"></i>
                                <b class="me-2">Current Status </b> Cancelled By Admin
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content" id="profile_content">
        Profile content
    </div>
</body>
</html>
