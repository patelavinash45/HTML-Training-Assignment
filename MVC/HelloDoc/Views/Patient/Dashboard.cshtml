@model List<HelloDoc.ViewModels.Dashboard>

@{
    List<String> status = new List<string>() {"Unassigned", "Accepted", "Cancelled", "Reserving", "MDEnRoute", "MDOnSite", "FollowUp", "Closed", "Locked", "Declined", "Consult", "Clear",
                            "CancelledByProvider", "CCUploadedByClient", "CCApprovedByAdmin" };

    List<String> months = new List<String>() { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Dashboard
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/international-telephone-input.css" rel="stylesheet" />
    <script src="~/js/international-telephone-input.js"></script>
    <link href="~/css/patient/dashboard.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/patient/dashboard.js"></script>
</head>
<body>
    <partial name="_DashboardHeader" />
    <div class="tab-content" id="dashboard_content">
        <span class="h3">
            Medical History
        </span>
        <div class="d-flex flex-column align-items-end" id="history">
            <button id="new-request">
                <span id="button-text">
                    Create New Request
                </span>
                <i id="button-icon" class="bi bi-plus"> </i>
            </button>
            <!-- table -->
            <div class="table-responsive w-100">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th class="col-2">
                                Created Date
                            </th>
                            <th class="col-2">
                                Current Status
                            </th>
                            <th class="col-8">
                                Document
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @months[int.Parse(@item.StrMonth.ToString())-1] @item.IntDate, @item.IntYear
                                </td>
                                <td>
                                    @status[int.Parse(@item.Status.ToString())-1]
                                </td>
                                <td>
                                    @{
                                        if (@item.Document >0)
                                        {
                                            //str = '"' + @item.DoumentsPaths.ToString() + '"';
                                            <a asp-controller="Patient" asp-action="ViewDocument" asp-route-id="@item.RequestId" >
                                                <button id="document">
                                                    (@item.Document) Document
                                                </button>
                                            </a>
                                        }
                                    }
                                </td>
                            </tr>
                        } @*
                        <tr>
                        <td>
                        Sep 27,2023
                        </td>
                        <td>
                        Accepted
                        </td>
                        <td>
                        <button id="document">
                        (1) Document
                        </button>
                        </td>
                        </tr>
                        *@
                    </tbody>
                </table>
            </div>
            <!-- table(mobile-view) -->
            <div class="accordion accordion-flush w-100" id="accordionFlushExample">
                @foreach(var item in Model)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Html.Raw(@item.RequestId)" aria-controls="panelsStayOpen-collapseOne">
                                <i class="bi bi-clock me-2"></i>
                                <b class="me-2">Created Date: </b> @months[int.Parse(@item.StrMonth.ToString())-1] @item.IntDate, @item.IntYear
                            </button>
                        </h2>
                        <div id="collapse-@Html.Raw(@item.RequestId)" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                            <div class="accordion-body">
                                <div>
                                    <i class="bi bi-person-circle me-2"></i>
                                    <b class="me-2">Provider: -</b>
                                </div>
                                <div>
                                    <i class="bi bi-check-circle me-2"></i>
                                    <b class="me-2">Current Status: - </b> @status[int.Parse(@item.Status.ToString())-1]
                                    @{
                                        if (@item.Document > 0)
                                        {
                                            <a asp-controller="Patient" asp-action="ViewDocument" asp-route-id="@item.RequestId">
                                                <button id="document">
                                                    (@item.Document) Document
                                                </button>
                                            </a>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="tab-content container" id="profile_content">
        <div class="d-flex justify-content-between align-content-center mt-3 mb-3">
            <span class="h3">
                User Profile
            </span>
            <a asp-controller="Patient" asp-action="Dashboard" asp-route-id="62">
                <button id="backBox">
                    <i class="bi bi-chevron-left"> </i>
                    Back
                </button>
            </a>
        </div>
        <form class="w-100" enctype="multipart/form-data" id="form">
                <h5 class="fw-semibold">
                    General Information
                </h5>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input class="form-control" id="first-name" />
                        <label for="first-name">First Name</label>
                        @*<span asp-validation-for="FirstName" class="text-danger"></span>*@
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="last-name" />
                        <label for="last-name">Last Name</label>
                        @*<span asp-validation-for="LastName" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="date" type="date" />
                        <label id="date-picker" for="date">Date of Birth</label>
                        @*<span asp-validation-for="BirthDate" class="text-danger"></span>*@
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    Contact Information
                </h5>
                <div class="row">
                    @*<div class="form-floating col-xl-6 col-md-6 col-lg-6">*@
                        @*<input  class="form-control" id="phone" type="tel" />*@
                        @*<span asp-validation-for="Mobile" class="text-danger"></span>*@
                        @*<label for="phone">Phone Number</label> *@
                    @*</div>*@
                    <div class="col-xl-6 col-md-6 col-lg-6">
                        <div class="row">
                        <select class="form-select col-xl-4 col-md-4 col-lg-4" aria-label="Default select example">
                            <option value="1" selected>Mobile</option>
                                <option value="2">Land Line</option>
                            </select>
                            <div class="form-floating col-xl-8 col-md-8 col-lg-8">
                                <input  class="form-control" id="phone" type="tel" />
                                @*<span asp-validation-for="Mobile" class="text-danger"></span>*@
                                @*<label for="phone">Phone Number</label> *@
                            </div>
                        </div>
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="email" type="email" onfocusout="checkEmail(this)" />
                        <label for="email">Email</label>
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                </div>
                <h5 class="fw-semibold mt-4">
                    Location Information
                </h5>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="street" />
                        <label for="street">Street</label>
                        @*<span asp-validation-for="Street" class="text-danger"></span>*@
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input class="form-control" id="city" />
                        <label for="city">city</label>
                        @*<span asp-validation-for="City" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="row">
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="state" />
                        <label for="state">State</label>
                        @*<span asp-validation-for="State" class="text-danger"></span>*@
                    </div>
                    <div class="form-floating col-xl-6 col-md-6 col-lg-6">
                        <input  class="form-control" id="zip-code" />
                        <label for="zip-code">Zip-Code</label>
                        @*<span asp-validation-for="ZipCode" class="text-danger"></span>*@
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="bottom-button" id="submit-button">
                        Edit
                    </button>
                </div>
        </form>
    </div>
    <script>
        const phoneInputField = document.getElementById("phone");
        const phoneInput = window.intlTelInput(phoneInputField, {
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
        });
    </script>
</body>
</html>
