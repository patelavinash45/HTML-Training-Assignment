@model List<Repositories.ViewModels.Dashboard>

@{
    List<String> status = new List<string>() {"Unassigned", "Accepted", "Cancelled", "Reserving", "MDEnRoute", "MDOnSite", "FollowUp", "Closed", "Locked", "Declined", "Consult", "Clear",
                            "CancelledByProvider", "CCUploadedByClient", "CCApprovedByAdmin" };

    List<String> months = new List<String>() { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sept", "Oct", "Nov", "Dec" };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        Dashboard
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/international-telephone-input.css" rel="stylesheet" />
    <script src="~/js/international-telephone-input.js"></script>
    <link href="~/css/patient/dashboard.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/patient/dashboard.js"></script>
</head>
<body>
    @{
        @Html.Partial("~/Views/Shared/_DashboardHeader.cshtml", Model[0].Header)
    }
    @await Component.InvokeAsync("Notyf")
    <div class="modal" tabindex="-1" id="createNewRequest">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Request</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Here, I Want to create new request for....
                    <div class="d-flex justify-content-end mt-2">
                        <button class="p-sm-3 mx-3 forMe" onclick="changeRadio(true)">Me</button>
                        <button class="forSomeOne" onclick="changeRadio(false)">Some One Else</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <a asp-controller="Patient" asp-action="RequestForMe" asp-route-id="@Model[0].Header.AspNetUserId" id="forMe">
                        <button type="button" class="btn btn-primary">Continue</button>
                    </a>
                    <a asp-controller="Patient" asp-action="RequestForSomeOne" asp-route-id="@Model[0].Header.AspNetUserId" id="forSomeOne">
                        <button type="button" class="btn btn-primary">Continue</button>
                    </a>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-content" id="dashboard_content">
        <span class="h3">
            Medical History
        </span>
        <div class="d-flex flex-column align-items-end" id="history">
            <button id="new-request" data-bs-target="#createNewRequest" data-bs-toggle="modal">
                <span id="button-text">
                    Create New Request
                </span>
                <i id="button-icon" class="bi bi-plus"> </i>
            </button>
            <!-- table -->
            <div class="table-responsive w-100">
                <table class="table">
                    <thead class="table-dark">
                        <tr>
                            <th class="col-2">
                                Created Date
                            </th>
                            <th class="col-2">
                                Current Status
                            </th>
                            <th class="col-8">
                                Document
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @months[int.Parse(@item.StrMonth.ToString())-1] @item.IntDate, @item.IntYear
                                </td>
                                <td>
                                    @status[int.Parse(@item.Status.ToString())-1]
                                </td>
                                <td>
                                    @{
                                        if (@item.Document >0)
                                        {
                                            //str = '"' + @item.DoumentsPaths.ToString() + '"';
                                            <a asp-controller="Patient" asp-action="ViewDocument" asp-route-id="@item.RequestId" >
                                                <button id="document">
                                                    (@item.Document) Document
                                                </button>
                                            </a>
                                        }
                                    }
                                </td>
                            </tr>
                        } @*
                        <tr>
                        <td>
                        Sep 27,2023
                        </td>
                        <td>
                        Accepted
                        </td>
                        <td>
                        <button id="document">
                        (1) Document
                        </button>
                        </td>
                        </tr>
                        *@
                    </tbody>
                </table>
            </div>
            <!-- table(mobile-view) -->
            <div class="accordion accordion-flush w-100" id="accordionFlushExample">
                @foreach(var item in Model)
                {
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="panelsStayOpen-headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Html.Raw(@item.RequestId)" aria-controls="panelsStayOpen-collapseOne">
                                <i class="bi bi-clock me-2"></i>
                                <b class="me-2">Created Date: </b> @months[int.Parse(@item.StrMonth.ToString())-1] @item.IntDate, @item.IntYear
                            </button>
                        </h2>
                        <div id="collapse-@Html.Raw(@item.RequestId)" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingOne">
                            <div class="accordion-body">
                                <div>
                                    <i class="bi bi-person-circle me-2"></i>
                                    <b class="me-2">Provider: -</b>
                                </div>
                                <div>
                                    <i class="bi bi-check-circle me-2"></i>
                                    <b class="me-2">Current Status: - </b> @status[int.Parse(@item.Status.ToString())-1]
                                    @{
                                        if (@item.Document > 0)
                                        {
                                            <a asp-controller="Patient" asp-action="ViewDocument" asp-route-id="@item.RequestId">
                                                <button id="document">
                                                    (@item.Document) Document
                                                </button>
                                            </a>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
